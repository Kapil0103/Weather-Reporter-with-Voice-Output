import requests
import json
import pyttsx3


city = input("enter the name of the city \n")
url = f"https://api.weatherapi.com/v1/current.json?key=adf28b5da7f940a9849183534250806&q={city}"

r = requests.get(url)
print(r.text)
wdic = json.loads(r.text)
w = wdic["current"]["temp_c"]




    # Initialize the TTS engine
engine = pyttsx3.init()

    # Speak the text
engine.say(f"-  say 'the current weateher in {city}is {w} degrees' ")
engine.runAndWait()
